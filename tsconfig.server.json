{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015","es2016","es2017"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "filesGlob": [
    "./src/server/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "jspm_packages",
    "dist",
    "build",
    "typings"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
